// Open the main.lua file and enter a string
with [get-view "Script Explorer" | get-tree] {
    select "myproject/src/main.lua" | double-click
}

with [get-editor main | get-text-viewer] {
    set-caret-pos 2 1
    type-text "a = [[My"
    //remove auto close bracket
    key-type Del -times 2
    key-type Enter
    type-text "multilne"
    key-type Enter
    type-text "string]]"
}

// Check syntaxic coloration for reserved words
wait 200
with [get-editor main | get-editbox] {
    get-property "styles.text" -index 11 | equals "[[My\n"| verify-true
    get-property "styles.fontStyle" -index 11 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 11 | equals "#2A00FF" | verify-true
    get-property "styles.text" -index 12 | equals "multilne\n" | verify-true
    get-property "styles.fontStyle" -index 12 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 12 | equals "#2A00FF" | verify-true
    get-property "styles.text" -index 13 | equals "string]]" | verify-true
    get-property "styles.fontStyle" -index 13 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 13 | equals "#2A00FF" | verify-true
}
