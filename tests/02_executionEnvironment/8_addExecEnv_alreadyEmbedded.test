*	Last Update: 07/16/2012
*********************/

// Add execution environment
get-menu "Window/Preferences" | click
get-window Preferences | get-tree | select "Lua/Execution Environments"

//set-dialog-result File with EE path
set-dialog-result File "platform:/resource/../q7-external-files/EE/lua-5.1.zip"

with [get-window Preferences] {
    get-button "Add..." | click
    get-window "Add Execution Environment Support" | get-button Yes | click
    get-button OK | click
}

// Check execution environment
get-menu "Window/Preferences" | click
get-window Preferences | get-tree | select "Lua/Execution Environments"
with [get-window Preferences | get-tree -after [get-label "Supported execution environments:"]] {
    get-property itemCount | equals 1 | verify-true
    get-item "lua-5.1" | get-property caption | equals "lua-5.1" | verify-true
}

// Remove execution environment
with [get-window Preferences] {
	get-tree -after [get-label "Supported execution environments:"] | select "lua-5.1"
	get-button Remove | click

// Check execution environment
	with [get-tree -after [get-label "Supported execution environments:"]] {
		get-property itemCount | equals 1 | verify-true
		get-item "lua-5.1 (Embedded)" | get-property caption | equals "lua-5.1 (Embedded)" | verify-true
	}
}

get-window Preferences | get-button OK | click
