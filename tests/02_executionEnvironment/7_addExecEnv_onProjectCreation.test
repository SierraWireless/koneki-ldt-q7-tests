// Create a new project and configure the Execution Environment
get-view "Script Explorer" | get-tree | get-menu "New/Lua Project" | click
with [get-window "New Lua project"] {
    get-editbox -after [get-label "Project name:"] | set-text "addExecEnv_onProjectCreation"
    get-group "Targeted Execution Environment" | get-link "<a>Configure Execution Environments...</a>" | click-link
}
//set-dialog-result File "/home/gaetan/Documents/lua-5.1.zip"
set-dialog-result File "platform:/resource/../q7-external-files/EE/gideros.zip"
with [get-window "New Lua project"] {
    with [get-window "Preferences (Filtered)"] {
        get-button "Add..." | click
        get-button OK | click
    }
    get-group "Targeted Execution Environment" | get-combo | set-text "gideros-2012.2.2.1"
}

// Check the Execution Environment is installed and linked to the project
get-window "New Lua project" | get-group "Targeted Execution Environment" | get-combo | get-property selection 
    | equals "gideros-2012.2.2.1" | verify-true
get-window "New Lua project" | get-button Finish | click
get-view "Script Explorer" | get-tree | select "addExecEnv_onProjectCreation" | double-click
get-view "Script Explorer" | get-tree | get-item "addExecEnv_onProjectCreation/Gideros 2012.2.2.1" | get-property caption 
    | equals "Gideros 2012.2.2.1" | verify-true
get-menu "Window/Preferences" | click
get-window Preferences | get-tree | select "Lua/Execution Environments"
get-window Preferences | get-tree -after [get-label "Supported execution environments:"] 
    | get-property "getItems().TreeItem[0].getText()" | equals "gideros-2012.2.2.1" | verify-true
get-window Preferences | get-button Cancel | click
