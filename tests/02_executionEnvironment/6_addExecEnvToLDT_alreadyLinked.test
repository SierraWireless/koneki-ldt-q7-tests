// Add execution environment
get-menu "Window/Preferences" | click
get-window Preferences | get-tree | select "Lua/Execution Environments"
set-dialog-result File "platform:/resource/../q7-external-files/EE/gideros.zip"
with [get-window Preferences] {
    get-button "Add..." | click

// Check an error is returned
	with [get-window "Problem Occurred"] {
		get-label "Execution environment is already installed." | get-property caption | equals "Execution environment is already installed." | verify-true
		get-button OK | click
	}
	get-tree -after [get-label "Supported execution environments:"] | get-property itemCount | equals 2 | verify-true
    get-button OK | click
}
