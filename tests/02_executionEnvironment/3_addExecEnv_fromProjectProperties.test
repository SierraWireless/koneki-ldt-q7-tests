// Add execution environment from project
get-view "Script Explorer" | get-tree | select "Project_noExecEnv" | get-menu "Properties" | click
with [get-window "Properties for Project_noExecEnv"] {
	get-tree | select "Lua/Build Path"
    get-tab-folder | get-tab-item "Libraries" | click
    get-button "Add Library..." | click
}
with [get-window "Add Library"] {
    get-list | select "Lua Execution Environment"
    get-button "Next >" | click
    get-button Configure | click
}
//set-dialog-result File "/home/gaetan/Documents/lua-5.1.zip"
set-dialog-result File "platform:/resource/../q7-external-files/EE/gideros.zip"
with [get-window "Add Library"] {
    with [get-window "Preferences (Filtered)"] {
        get-button "Add..." | click
        get-button OK | click
    }
    get-tree | select "gideros-2012.2.2.1"
    get-button Finish | click
}
get-window "Properties for Project_noExecEnv" | get-button OK | click

// Check execution environment for project
get-view "Script Explorer" | get-tree | get-property "getItems().TreeItem[0].getItems().TreeItem[1].getText()" 
    | equals "Gideros 2012.2.2.1" | verify-true
    
// Check execution environment for ldt
get-menu "Window/Preferences" | click
get-window Preferences | get-tree | select "Lua/Execution Environments"
with [get-window Preferences | get-tree -after [get-label "Supported execution environments:"]] {
    get-property itemCount | equals 2 | verify-true
    get-item "gideros-2012.2.2.1" | get-property caption | equals "gideros-2012.2.2.1" | verify-true
}
get-window Preferences | get-button OK | click
