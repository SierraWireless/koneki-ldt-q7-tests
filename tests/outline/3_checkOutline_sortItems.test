/*********************
*	Created by: Simon Gaestel
*	Creation date: 07/30/2012
*********************/

// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "myproject/src/main.lua" | double-click
}

// Declare functions and local variables
with [get-editor main | get-text-viewer] {
    set-caret-pos 3 4
    key-type Enter
    type-text "local var1"
    key-type Enter
    type-text "local a"
    key-type Enter
    type-text "local function var3()"
    key-type Enter
    type-text end
    key-type Enter
    type-text "local var2"
}

// Check the functions displayed in the outline view
with [get-view Outline | get-tree] {
    get-property "getItems().TreeItem[0].getText()" | equals main | verify-true
    get-property "getItems().TreeItem[1].getText()" | equals var1 | verify-true
    get-property "getItems().TreeItem[2].getText()" | equals a | verify-true
    get-property "getItems().TreeItem[3].getText()" | equals var3 | verify-true
    get-property "getItems().TreeItem[4].getText()" | equals var2 | verify-true
}

// Sort the outline view and check the result
get-view Outline | click
get-button Sort | click
with [get-view Outline | get-tree] {
    get-property "getItems().TreeItem[0].getText()" | equals a | verify-true
    get-property "getItems().TreeItem[1].getText()" | equals main | verify-true
    get-property "getItems().TreeItem[2].getText()" | equals var1 | verify-true
    get-property "getItems().TreeItem[3].getText()" | equals var2 | verify-true
    get-property "getItems().TreeItem[4].getText()" | equals var3 | verify-true
}
