// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

// Enter a new local function
with [get-editor main | get-text-viewer] {
    set-caret-pos 4 1
    type-text "local var1"
    key-type Enter
    type-text a
    key-type Enter
    type-text "local var2"
    key-type Enter
    type-text "local function main2("
    key-type Tab
    key-type Enter
    type-text end
    key-type Enter
    set-caret-pos 5 1
    type-text "local var3"
    key-type Enter
}
with [get-view Outline | get-tree] {
    get-property "getItems().TreeItem[0].getText()" | equals main | verify-true
    get-property "getItems().TreeItem[1].getText()" | equals var1 | verify-true
}
with [get-editor main | get-text-viewer] {
    set-caret-pos 6 2
    key-type BackSpace
}
with [get-view Outline | get-tree] {
    get-property "getItems().TreeItem[0].getText()" | equals main | verify-true
    get-property "getItems().TreeItem[1].getText()" | equals var1 | verify-true
    get-property "getItems().TreeItem[2].getText()" | equals var3 | verify-true
    get-property "getItems().TreeItem[3].getText()" | equals var2 | verify-true
    get-property "getItems().TreeItem[4].getText()" | equals main2 | verify-true
}
