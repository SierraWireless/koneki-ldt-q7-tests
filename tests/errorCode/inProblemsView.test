// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "myproject/src/main.lua" | double-click
}
// Type some code with syntax errors
with [get-editor main | get-text-viewer] {
    set-caret-pos 5 1
    type-text a
    key-type Enter
    type-text e
}

// Save the file and open the Problems view
// Check the content of the Problems view
get-button "Save (M1+S)" | click
get-view Problems | get-tree |   select "Errors \\(1 item\\)" | double-click

//Check problems view content
with [get-view Problems | get-tree] {
    get-property "getItems().TreeItem[0].getText()" | equals "Errors (1 item)" | verify-true
    get-property "getItems().TreeItem[0].getItems().TreeItem[0].getText()" 
        | equals "line 5, char 1: This expression (\"a\") is an identifier; a statement was expected, and only function and method call expressions can be used as statements\n"
        + ">>> a\n"
        + ">>>  ^" | verify-true
}
