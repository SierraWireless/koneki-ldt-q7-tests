/*********************
*	Created by: Simon Gaestel
*	Creation date: 07/17/2012
*********************/

// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

// Enter a function with parameter
with [get-editor main | get-text-viewer] {
    set-caret-pos 2 1
    type-text "local function toto(var1"
    key-type Enter -times 2
    type-text "var1 = 2"
    key-type Enter
    type-text "end"
    key-type Enter
    type-text "var1 = 3"
    key-type Enter -times 2
    set-caret-pos 2 26
    key-type Left
}

// Check all occurences of the parameter are highlighted in the function, but not the others
with [get-editor main | get-editbox] {
    get-property "getStyleRanges().StyleRange[13].start" | equals 42 | verify-true
    get-property "getStyleRanges().StyleRange[13].length" | equals 4 | verify-true
    get-property "getStyleRanges().StyleRange[13].font" | equals null | verify-true
    get-property "getStyleRanges().StyleRange[13].foreground" | equals "#676767" | verify-true
    get-property "getStyleRanges().StyleRange[13].background" | equals "#D4D4D4" | verify-true
    
    get-property "getStyleRanges().StyleRange[16].start" | equals 48 | verify-true
    get-property "getStyleRanges().StyleRange[16].length" | equals 4 | verify-true
    get-property "getStyleRanges().StyleRange[16].font" | equals null | verify-true
    get-property "getStyleRanges().StyleRange[16].foreground" | equals "#676767" | verify-true
    get-property "getStyleRanges().StyleRange[16].background" | equals "#D4D4D4" | verify-true
    
    get-property "getStyleRanges().StyleRange[24].start" | equals 61 | verify-true
    get-property "getStyleRanges().StyleRange[24].length" | equals 4 | verify-true
    get-property "getStyleRanges().StyleRange[24].font" | equals null | verify-true
    get-property "getStyleRanges().StyleRange[24].foreground" | equals "#000000" | verify-true
    get-property "getStyleRanges().StyleRange[24].background" | equals "" | verify-true
}
