// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

with [get-editor main | get-text-viewer] {
	set-caret-pos 1 1
	get-menu "Source/Shift Right" | click
	set-caret-pos 2 1
	type-text "var1 = 2"
	get-menu "Source/Correct Indentation" | click
}

get-editor main | get-editbox | get-property text | equals "\tlocal function main()\n"
	+"\tvar1 = 2\n"
	+"end\n"
	+"main()\n" | verify-true

