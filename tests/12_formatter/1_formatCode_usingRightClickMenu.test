// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}


with [get-editor main | get-text-viewer] {
	set-caret-pos 2 1
	type-text "zz = var1"
    set-caret-pos 5 1
    type-text if
    key-type "M1+SPACE"
    key-type Enter
    type-text "var1==2"
    key-type Enter
    key-type Tab
    type-text "if"
    key-type "M1+SPACE"
    key-type Enter
    type-text "var2==3"
    key-type Enter
    key-type BackSpace
    type-text "aa = 2"
    key-type Enter
    type-text "bb = 1"
    set-caret-pos 9 12
    key-type Enter
    key-type Tab
    type-text "var2 = 18"
    get-menu "Source/Format" | click
}
get-editor main | get-editbox | get-property text | equals "local function main()\n"
	+ "\tzz = var1\n"
    + "end\n"
    + "main()\n"
    + "if var1==2 then\n"
    + "\tif var2==3 then\n"
    + "\t\taa = 2\n"
    + "\t\tbb = 1\n"
    + "\tend\n"
    + "\tvar2 = 18\n"
    + "end" | verify-true
