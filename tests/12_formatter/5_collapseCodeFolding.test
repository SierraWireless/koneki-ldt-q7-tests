// Open main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | click -default
    select "Project_noExecEnv/src/main.lua" | double-click
}

// Collapse function "main"
get-editor main | get-left-ruler | get-ruler-column ProjectionRulerColumn | click-ruler -line 1

// Check function has been collapsed
get-editor main | get-editbox | get-property text | equals "local function main()\n"
    + "main()" | verify-true

// Expand function "main"
get-editor main | get-left-ruler | get-ruler-column ProjectionRulerColumn | click-ruler -line 1

// Check function has been expanded
get-editor main | get-editbox | get-property text | equals "local function main()\n\n"
    + "end\n"
    + "main()" | verify-true
