// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

with [get-editor main | get-text-viewer] {
	select-range 1 1 4 1
	get-menu "Source/Shift Right" | click
}

get-editor main | get-editbox | get-property text | equals "\tlocal function main()\n\t\n"
	+"\tend\n"
	+"main()\n" | verify-true

with [get-editor main | get-text-viewer] {
	select-range 1 1 3 1
	get-menu "Source/Shift Left" | click
	set-caret-pos 4 2
	get-menu "Source/Shift Left" | click
}

get-editor main | get-editbox | get-property text | equals "local function main()\n\n"
	+"\tend\n"
	+"main()\n" | verify-true
