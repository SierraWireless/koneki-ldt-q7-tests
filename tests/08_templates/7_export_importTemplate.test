*********************/

// Export an existing template, then remove it
get-menu "Window/Preferences" | click
get-window Preferences | get-table | select newTemplate
set-dialog-result File "platform:/resource/../q7-external-files/templates.xml"
with [get-window Preferences] {
    get-button "Export..." | click
    get-window "Export Templates" | get-button Yes | click
    get-table | select newTemplate
    get-button Remove | click
}

// Import the previously exported/removed template
set-dialog-result File "platform:/resource/../q7-external-files/templates.xml"
with [get-window Preferences] {
    get-button "Import..." | click
    get-table | select newTemplate

// Check all data from the template have been imported
    get-button "Edit..." | click
    with [get-window "Edit Template"] {
	    get-editbox -after [get-label "Name:"] | get-property text | equals newTemplate | verify-true
	    get-editbox -after [get-label "Description:"] | get-property text | equals newTemplateDesc | verify-true
	    get-editbox -after [get-label "Pattern:"] | get-property text 
	        | equals "function new (${var1}, ${var2}, ${var3}, ${language})\n"
	        + "${var1} = ${module_name}\n"
	        + "${var2} = ${module_short_name}\n"
	        + "${var3} = ${file}\n"
	        + "end\n"
	        + "${cursor}" | verify-true
		get-button OK | click
    }

// Remove the template
    get-table | select newTemplate
    get-button Remove | click
    get-button OK | click
}

