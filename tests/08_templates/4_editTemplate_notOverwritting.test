// Open the Preferences and edit an existing template, without overwritting the original one
get-menu "Window/Preferences" | click
with [get-window Preferences] {
    get-tree | select "Lua/Editor/Templates"
    get-table | select newTemplate
    get-button "Edit..." | click
    with [get-window "Edit Template"] {
    	get-editbox -after [get-label "Name:"] | set-text newTemplate2
    	get-editbox -after [get-label "Description:"] | set-text newTemplateDesc2
    	with [get-text-viewer] {
	    	set-caret-pos 1 13
    		type-text 2
    	}
    	get-button OK | click
    }
    get-window "Edit Template" | get-button Yes | click
    get-button OK | click
}

// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

// Use both original and updated templates through content-assist to use auto-completion
with [get-editor main | get-text-viewer] {
    set-caret-pos 2 1
    type-text newT
    key-type "M1+SPACE"
    key-type Enter
    type-text aze
    key-type Tab
    type-text rty
    key-type Tab
    type-text uio
    key-type Tab
    key-type Enter -times 2
    type-text newT
    key-type "M1+SPACE"
    key-type Down
    key-type Enter
    type-text qsd
    key-type Tab
    type-text fgh
    key-type Tab
    type-text jkl
    key-type Tab
}

// Check both templates can be used for auto-completion
get-editor main | get-editbox | get-property text | equals "local function main()\n"
    + "function new (aze, rty, uio, Lua)\n"
    + "aze = main\n"
    + "rty = main\n"
    + "uio = main.lua\n"
    + "end\n\n"
    + "function new2 (qsd, fgh, jkl, Lua)\n"
    + "qsd = main\n"
    + "fgh = main\n"
    + "jkl = main.lua\n"
    + "end\n\n"
    + "end\n"
    + "main()" | verify-true

// Remove the 2 templates
get-menu "Window/Preferences" | click
with [get-window Preferences] {
    get-tree | select "Lua/Editor/Templates"
    get-table | select newTemplate2
    get-button Remove | click
    get-table | select newTemplate
    get-button Remove | click
    get-button OK | click
}

