// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

// Use a global variable with no declaration, and try to open its declaration
with [get-editor main | get-text-viewer] {
    set-caret-pos 2 1
    type-text "var1 = 2"
    set-caret-pos 2 2
    get-menu "Open Declaration" | click
}

// Check nothing is selected and a message is displayed
with [get-label "Current text selection does not resolve to a Script element"] {
    get-property caption | equals "Current text selection does not resolve to a Script element" | verify-true
    get-property foregroundColor | equals "#FF0000" | verify-true
}
get-editor main | get-editbox | get-property "getSelectionCount()" | equals 0 | verify-true
