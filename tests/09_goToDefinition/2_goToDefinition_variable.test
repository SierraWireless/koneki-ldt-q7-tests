*********************/

// Open the main.lua file
with [get-view "Script Explorer" | get-tree] {
    select "Project_noExecEnv/src/main.lua" | double-click
}

// Declare a local variable and re-use it
with [get-editor main | get-text-viewer] {
    set-caret-pos 2 1
    type-text "local var1"
    key-type Enter
    type-text "var1 = 2"

// Check OpenDeclaration on local variable selects its declaration
    set-caret-pos 3 3
    get-menu "Open Declaration" | click
}
with [get-editor main | get-editbox] {
    get-property "getSelectionText()" | equals var1 | verify-true
    get-property "getSelectionCount()" | equals 4 | verify-true
    get-property "getSelectionBackground()" | equals "#F07746" | verify-true
    get-property "getSelectionForeground()" | equals "#FFFFFF" | verify-true
}
